@model IEnumerable<ProyectoEDIp.Models.Patientinfo>
@{
    ViewBag.Title = "Patient";
}

<h2>Patient</h2>
@using (Html.BeginForm("Busqueda Paciente", "Paciente", FormMethod.Get))
{
    <p>
        Buscar paciente por nombre :@Html.TextBox("Nombre")
        <br/>
        Buscar paciente por apellido :@Html.TextBox("Apellido")
        <br/>
        Buscar paciente por DPI :@Html.TextBox("DPI")
        <br /> 
        <input type="submit" name="Value"value="Buscar" /> 
    </p>
}
<table class="table-bordered"
       <tr>
           <th>
               Nombre 
           </th> 
           <th>
               Apellido
           </th>
           <th>
               DPI
           </th>
           <th>
               Edad
           </th>
           <th>
               Departamento
           </th>
           <th>
               Municipio
           </th>
           <th></th>
       </tr>
@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DPI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegistrationCenter)
    </td>
</tr>

}